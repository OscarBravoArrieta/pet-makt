{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "composite": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "lib": ["es2022", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "jest.config.ts",
    "jest.config.cts",
    "src/test-setup.ts"
  ]
}
